@model MenuModel

@{
    ViewData["Title"] = "Create";
}

@*<div class="card ">*@
@*<div class="card-header">
    <h3 class="card-title">Menú</h3>
</div>*@
        <form asp-action="Create">
            <div class="row">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group col-md-6">
                    <label asp-for="IdMenuSuperior" class="control-label"></label>
                    @*<select asp-for="IdMenuSuperior" class="form-control" />*@
                    <select asp-for="IdMenuSuperior" asp-items="Model.List" class="form-control">
                        <option value="0">Ninguno</option>
                    </select>
                    <span asp-validation-for="IdMenuSuperior" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="MenuTitulo" class="control-label"></label>
                    <input asp-for="MenuTitulo" class="form-control" required />
                    <span asp-validation-for="MenuTitulo" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Link" class="control-label"></label>
                    <input asp-for="Link" class="form-control" />
                    <span asp-validation-for="Link" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Orden" class="control-label"></label>
                    <input asp-for="Orden" class="form-control" required />
                    <span asp-validation-for="Orden" class="text-danger"></span>
                </div>
                 <div class="align-bottom col-md-12">
                    <div class="form-group col-md-6 form-check ">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Activo" /> @Html.DisplayNameFor(model => model.Activo)
                        </label>
                     </div>
                </div>
               <div class="card-footer col-md-12">
                     <input type="submit" value="Insertar Menú" class="btn btn-primary" />
                     @*<a asp-action="Index" class="btn btn-secondary">Volver</a>*@
               </div>
            </div>
        </form>
@*    </div>*@

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
