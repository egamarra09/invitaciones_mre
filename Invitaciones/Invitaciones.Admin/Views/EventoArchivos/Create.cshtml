@model Invitaciones.Shared.Data.EventoArchivo

@{
    ViewData["Title"] = "Create";
}



 
        <form asp-action="Create">
             <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group col-md-6">
                <label asp-for="IdEvento" class="control-label"></label>
                <select asp-for="IdEvento" class ="form-control" asp-items="ViewBag.IdEvento"></select>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Archivo" class="control-label"></label>
                <input asp-for="Archivo" class="form-control" />
                <span asp-validation-for="Archivo" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Tipo" class="control-label"></label>
                <input asp-for="Tipo" class="form-control" />
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Url" class="control-label"></label>
                <input asp-for="Url" class="form-control" />
                <span asp-validation-for="Url" class="text-danger"></span>
            </div>
              <div class="align-bottom col-md-12">
                    <div class="form-group col-md-6 form-check ">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Activo" /> @Html.DisplayNameFor(model => model.Activo)
                        </label>
                     </div>
                </div>
          <div class="card-footer col-md-12">
                     <input type="submit" value="Insertar Menú" class="btn btn-primary" />
                     @*<a asp-action="Index" class="btn btn-secondary">Volver</a>*@
               </div>
            </div>
        </form>
   




